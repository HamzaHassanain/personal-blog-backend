<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <%- include("./includes/head.ejs") %>
    <title>Add Something</title>
  </head>

  <body>
    <%- include("./includes/navbar.ejs") %> <%-
    include("./includes/sidebar.ejs") %>
    <div id="wrapper">
      <div id="page-wrapper">
        <div id="page-inner">
          <div class="row">
            <div class="col-md-12">
              <h2>Experiences</h2>
            </div>
          </div>
          <!-- /. ROW  -->

          <hr />
          <div class="row">
            <div class="col-lg-12 col-md-12">
              <a href="/admin/experience/new/" class="btn btn-info btn-lg"
                >Add Experience</a
              >
            </div>
            <br />
            <br />
            <div class="col-lg-12 col-md-12">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Role</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (data) { %> <% for (const [i,item] of data.entries()) {
                  %>

                  <tr>
                    <td>3</td>
                    <td>Game Developer</td>
                    <td>2020</td>
                    <td>2021</td>
                    <td class="forms-container">
                      <form action="#" method="post" class="button-form">
                        <button type="submit" class="btn btn-info">info</button>
                      </form>
                      <form action="#" method="post" class="button-form">
                        <button type="submit" class="btn btn-warning">
                          warning
                        </button>
                      </form>
                      <form action="#" method="post" class="button-form">
                        <button type="submit" class="btn btn-danger">
                          danger
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% } %> <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /. PAGE WRAPPER  -->
    </div>

    <%- include("./includes/footer.ejs") %>
  </body>
</html>
