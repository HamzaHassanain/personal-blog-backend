<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <%- include("./includes/head.ejs") %>
    <title>DASHBOARD</title>
  </head>

  <body>
    <%- include("./includes/navbar.ejs") %> <%-
    include("./includes/sidebar.ejs") %>
    <div id="wrapper">
      <div id="page-wrapper">
        <div id="page-inner">
          <div class="row">
            <div class="col-md-12">
              <h2>DASHBOARD</h2>
              <h2 style="color: red">
                <% if (err) { %> <%- err.error %> <%- err.message %> <% } %>
              </h2>
            </div>
          </div>
          <!-- /. ROW  -->
          <hr />
          <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-12">
              <form action="/admin/dashboard/edit/?_method=put" method="POST">
                <!-- <h5>Role</h5> -->
                <div class="col-lg-12 col-md-12">
                  <div class="form-group">
                    <label>Title</label>
                    <input class="form-control input-group"
                    placeholder="Title......" value="<%=data?.title || "" %>"
                    name="title" />
                    <!-- <p class="help-block">Help text here.</p> -->
                  </div>
                </div>

                <div class="col-lg-12 col-md-12">
                  <div class="form-group">
                    <textarea
                      rows="4"
                      class="form-control input-group"
                      name="describtion"
                      placeholder="Discrpetion (html allowed)..."
                    >
<%= data?.describtion || "" %></textarea
                    >
                    <!-- <p class="help-block">Help text here.</p> -->
                  </div>
                </div>
                <div class="col-lg-6 col-md-6">
                  <button
                    type="submit"
                    class="btn btn-success btn-lg full-width"
                  >
                    Save
                  </button>
                </div>
              </form>
            </div>
            <div class="col-log-4 col-md-4 col-sm-12" id="ImageUpload">
              <form
                action="/admin/dashboard/upload"
                method="POST"
                enctype="multipart/form-data"
              >
                <input
                  type="file"
                  name="image"
                  id="file-selector"
                  onchange="PreviewImage();"
                />

                <img src="<%= data?.image?.url || "" %>" alt="<%=
                data?.image?.id || "" %>" class="fix" id="preview" />
                <button type="submit" class="btn btn-success btn-md full-width">
                  save
                </button>
              </form>
              <script type="text/javascript">
                function PreviewImage() {
                  var oFReader = new FileReader();
                  oFReader.readAsDataURL(
                    document.getElementById("file-selector").files[0]
                  );
                  oFReader.onload = function (oFREvent) {
                    document.getElementById("preview").src =
                      oFREvent.target.result;
                  };
                }
              </script>
              <br />
            </div>
          </div>


          <hr />
          <div class="row">
            <div class="col-lg-12 col-md-12">
              <form action="/admin/dashboard/links/new" method="POST">
                <div class="row">
                  <div class="col-lg-12 col-md-12">
                    <!-- <h5>Role</h5> -->
                    <div class="col-lg-6 col-md-6 col-sm-12">
                      <div class="form-group">
                        <label>Title</label>
                        <input class="form-control input-group" placeholder="Link Title Here...."/>
                      </div>
                    </div> 
                    <div class="col-lg-6 col-md-6 col-sm-12">
                      <div class="form-group">
                        <label>URL</label>
                        <input class="form-control input-group" placeholder="URL Here...."/>
                      </div>
                    </div>
                  
                    <div class="col-lg-6 col-md-6">
                      <button type="submit" class="btn btn-success">
                        Add
                      </button>
                    </div>
                  </div>
                </div>
              </form>
              <br>
              <br>
            </div>
            <br />
            <br />
            <div class="col-lg-12 col-md-12">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Icon</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (data) { %> 
                    <% for (const [i,item] of links.entries()) { %>

                  <tr>
                    <td><%- i+1 %></td>
                    <td> <img src="<%= item?.image?.url || "" %>" alt="<%=
                      item?.image?.id || "" %>"  class="fix" width="64" />
                       </td>
                    <td> <strong> <%- item.title %> </strong> </td>
                    <td> <strong>  <%- item.status %> </strong>  </td>

                    <td class="forms-container">
                      <form action="<%- "/admin/dashboard/links/delete/" + item.id+"?_method=DELETE" %>" 
                        method="post" class="button-form">
                        <button type="submit" class="btn btn-danger">
                          Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% } %> 
                <% } %>
                </tbody>
              </table>
            </div>
          </div>

          <br />
          <br />
          <hr />
        </div>
      </div>
      <!-- /. PAGE WRAPPER  -->
    </div>

    <%- include("./includes/footer.ejs") %>
  </body>
</html>
